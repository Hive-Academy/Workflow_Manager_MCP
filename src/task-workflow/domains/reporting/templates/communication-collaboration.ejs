        <% 
        const communicationMetrics = data.communicationMetrics || {
            clarity: { score: 88, icon: 'üí¨' },
            responsiveness: { score: 92, icon: '‚ö°' },
            collaboration: { score: 85, icon: 'ü§ù' },
